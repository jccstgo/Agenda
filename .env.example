# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Secret
# Produccion: minimo 32 caracteres
JWT_SECRET=dev-jwt-secret-change-for-production-please

# Database
# Local (desde /server)
DB_PATH=./database.sqlite
# Railway + Volume (recomendado)
# DB_PATH=/data/database.sqlite

# Uploads
# Local (desde /server)
UPLOADS_DIR=../uploads
# Railway + Volume (recomendado)
# UPLOADS_DIR=/data/uploads

# Usuarios iniciales por defecto (solo se usan si la tabla users esta vacia)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_READER_USERNAME=Director
DEFAULT_READER_PASSWORD=director123
